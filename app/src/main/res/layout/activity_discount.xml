<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Discount Calculator"
        android:textSize="25sp"
        android:textColor="@color/color_primary"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/disViewPrice"
            style="@style/MyButton"
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="20dp"
            android:text="Price"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/disPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:gravity="center_vertical|right"
            android:text="0"
            android:textColor="@color/color_primary"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/disViewPercentage"
            style="@style/MyButton"
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="20dp"
            android:text="Discount %"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/disPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_primary"
            android:textSize="20sp"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/disViewResult"
            style="@style/MyButton"
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="20dp"
            android:text="Discount Price"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/disResult"
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:textColor="@color/color_primary"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:background="@color/color_primary"
        android:textSize="@dimen/button_text_size"
        />

</LinearLayout>